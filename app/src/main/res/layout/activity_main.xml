<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="2"
    tools:context=".MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_select"
        android:id="@+id/button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_gray_button"
        android:id="@+id/btn_to_gray"/>

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_1"
        />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_2"
        />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_3"
        />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_4"
        />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_5" />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_6" />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_7" />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_8" />

    <ImageView
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:id="@+id/image_view_9" />

</GridLayout>

